<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AnimalHusbandryComponentsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/animal_husbandry_component_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="8dp"
            android:text="Animal Husbandry Components"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/beneficiary_occupation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="76dp"
            android:text="@string/question_seven_1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/animal_husbandry_component_label" />

        <TextView
            android:id="@+id/before_tdf_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="@string/before_tdf_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/beneficiary_occupation_label"
            app:layout_constraintTop_toBottomOf="@+id/beneficiary_occupation_label" />

        <TextView
            android:id="@+id/for_consumption_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/question_seven_own_consumption"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/before_tdf_label"
            app:layout_constraintTop_toBottomOf="@+id/before_tdf_label" />

        <EditText
            android:id="@+id/for_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/for_consumption_label"
            app:layout_constraintStart_toEndOf="@+id/for_consumption_label"
            app:layout_constraintTop_toTopOf="@+id/for_consumption_label" />

        <TextView
            android:id="@+id/for_sell_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/question_seven_for_sell"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/for_consumption_label"
            app:layout_constraintTop_toBottomOf="@+id/for_consumption_label" />

        <EditText
            android:id="@+id/for_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/for_sell_label"
            app:layout_constraintStart_toEndOf="@+id/for_sell_label"
            app:layout_constraintTop_toTopOf="@+id/for_sell_label" />

        <TextView
            android:id="@+id/after_tdf_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:text="@string/after_tdf_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/for_sell_label"
            app:layout_constraintTop_toBottomOf="@+id/for_sell_label" />

        <TextView
            android:id="@+id/for_consumption_label_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/question_seven_own_consumption"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/after_tdf_label"
            app:layout_constraintTop_toBottomOf="@+id/after_tdf_label" />

        <EditText
            android:id="@+id/for_consumption_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/for_consumption_label_after"
            app:layout_constraintStart_toEndOf="@+id/for_consumption_label_after"
            app:layout_constraintTop_toTopOf="@+id/for_consumption_label_after" />

        <TextView
            android:id="@+id/for_sell_label_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/question_seven_for_sell"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/for_consumption_label_after"
            app:layout_constraintTop_toBottomOf="@+id/for_consumption_label_after" />

        <EditText
            android:id="@+id/for_sell_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="10"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/for_sell_label_after"
            app:layout_constraintStart_toEndOf="@+id/for_sell_label_after"
            app:layout_constraintTop_toTopOf="@+id/for_sell_label_after" />

        <Button
            android:id="@+id/family_info_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:background="#000000"
            android:text="Submit"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/for_sell_after" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>